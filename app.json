{
  "name": "ikigai-app",
  "description": "Ikigai Villa - Next.js application with admin panel",
  "repository": "https://github.com/NguyenZak/ikigai-app",
  "logo": "https://ikigaivilla.vn/logo.svg",
  "keywords": ["nextjs", "react", "node", "prisma", "postgresql"],
  "env": {
    "DATABASE_URL": {
      "description": "PostgreSQL database URL",
      "required": true
    },
    "NEXTAUTH_SECRET": {
      "description": "NextAuth secret key",
      "required": true
    },
    "NEXTAUTH_URL": {
      "description": "Your app URL (e.g., https://ikigai-villa-app-8fcfa78ff74e.herokuapp.com/)",
      "required": true
    },
    "CLOUDINARY_CLOUD_NAME": {
      "description": "Cloudinary cloud name",
      "required": false
    },
    "CLOUDINARY_API_KEY": {
      "description": "Cloudinary API key",
      "required": false
    },
    "CLOUDINARY_API_SECRET": {
      "description": "Cloudinary API secret",
      "required": false
    },
    "EMAIL_SERVER_HOST": {
      "description": "SMTP server host",
      "required": false
    },
    "EMAIL_SERVER_PORT": {
      "description": "SMTP server port",
      "required": false
    },
    "EMAIL_SERVER_USER": {
      "description": "SMTP server username",
      "required": false
    },
    "EMAIL_SERVER_PASSWORD": {
      "description": "SMTP server password",
      "required": false
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:mini"
    }
  ]
} 